*.pkl binary
*.pickle binary

# ============================================================================
# GitHub Linguist overrides
# ============================================================================
# Exclude certain files from language statistics
*.ipynb linguist-documentation=false
*.ipynb linguist-detectable=true

# Mark generated files
outputs/* linguist-generated=true
*.csv linguist-generated=true

